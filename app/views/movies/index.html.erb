<header class="intro-header">
  <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
          <div class="site-heading">
              <br><br><br>
              <h1 class="header-text-blur text-center">Rotten Mangoes</h1>
              <hr class="small-hr">
              </div>
              <h1 class="header-text-blur text-center small">Your go-to site for movie reviews</h1>
          </div>
      </div>
  </div>
</header>


<div class= "container"> 
  <%= link_to "Submit a movie!", new_movie_path %>
  <%= render 'search' %>
  <hr>
  <% @movies.each do |movie| %>
    <%= render partial: "movie", locals: { movie: movie } %>
  <% end %>

</div>